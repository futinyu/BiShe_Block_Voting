<body>
<div class="header">
    <header>
        <div class="header-main">
            <div class="header-logo">
                <a href="#"><img class="headerback" src="./images/投票.jpg" alt="#"></a>
            </div>
            <div class="header-title"><a href="/index" style="text-decoration: none;color: black"><b>投票网</b></a></div>
            {{#if Obj.username}}
                <div class="after-login"><p>欢迎回来！<a href="#" onmouseover="aMove(this)" onmouseout="aOut(this)">{{Obj.username}}</a>
                    <a href="javascript:void(0)" onclick="delLogin(this)" style="color: red">注销</a></p>
                </div>
                <div  class="blcok-div">
                    <ul class="block-ul">
                        <li>电 话: <label for="" class="phone">{{Obj.phone}}</label></li>
                        <li>余 额：<label for="" class="balance" value="{{Obj.banlance}}">{{Obj.banlance}}FTY</label></li>
                    </ul>
                </div>
                <!--            未登陆的时候-->
            {{else}}
                <div class="header-menu">     <!--两个class属性-->
                    <ul class="main-menu">
                        <li><a href="/register">注册</a></li>
                        <li><a href="/login">登录</a></li>
                        <li><a href="#">帮助</a></li>
                    </ul>
                </div>
            {{/if}}
        </div>
    </header>

</div>
<!--中间投票的地方-->
<div class="content">
          <div class="title-main">
              <div class="clearfix">
                  <div class="entry-avater"><img src="./images/头像.jpg" alt=""></div>
<!--                  存放标题简介-->
                  <h1 class="entry-title"></h1>

              </div>
              <p class="entry-meta">
                  <img class="fa-clock" src="./images/time.jpg" alt="时间">
                  <span class="clock-s"></span>
                  <img  class="fa-read"  src="./images/view.png" alt="投票数">
                  <span class="read-s"></span>
                  <img  class="fa-admin"  src="./images/admin.jpg" alt="">
                  <span class="">admin</span>
              </p>

          </div>
        <div class="votemain">
            <div class="introduce"></div>
                <div class="member-list">
                <ul class="member-ul">
<!--                    <li><div class="member-info">-->
